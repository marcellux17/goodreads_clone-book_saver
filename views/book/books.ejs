<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
    <title>Books</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <div class="container">
        <div class="books d-flex flex-column align-items-center my-4">
            <% books.forEach(book => {%>
                <div class=" rounded shadow py-2 px-3 d-flex flex-column flex-sm-row p-3 my-1 my-sm-3">
                    <img src="<%= `/images/books/resized/${book.cover}` %>" alt="book cover" class="mx-4 align-self-center" style="height: 180px; width: 120px;">
                    <div class="d-flex flex-column">
                        <h3>
                            <%= book.title %>
                        </h3>
                        <h5 class="text-muted">
                            <%= book.author %>
                        </h5>
                        <h6 class="text-muted">
                            avg. rating: <%= book.averageRating %>
                        </h6>
                        <div style="overflow: hidden; width: 300px; height: 100px; line-height: 1.3;">
                            <%= book.description %>
                        </div>
                        <a href="<%= `/books/${book._id}` %>" class="btn btn-info btn-sm mt-1" role="button">View more</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
</body>
</html>